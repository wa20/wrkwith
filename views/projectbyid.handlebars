{{>loggedIn}}
<link rel="stylesheet" href="/assets/css/modal.css">



<section class="section is-small is-flex is-justify-content-center">
  <div class="item">

    <div class="profileContainer">
      <div class="image spacing">
        {{#if avatar}}
        <img src="/assets/avatars/{{user.avatar}}" class="ui rounded image">
        {{else}}
        <img class="ui small rounded image" id="avatar" src="/assets/profiles/joe/jpg">
        {{/if}}
      </div>


      <div class="content spacing">
        <h3 class="ui huge header left aligned">{{title}}</h3>
        <h3 class="ui header"> Owner: {{user.user_name}} </h3>
        <p class="section_title">Created On: <span class="user_text">{{format_date date_created}}</span></p>
      </div>

    </div>

    <div class="item is-flex is-justify-content-center">
      <div class="ui orange submit button is-fullwidth mt-2" data-id="{{id}}" id="collaborate">WRK with</div>
      {{!-- <div class="ui green submit button" data-id="{{id}}" id="collaborate">Contact Me</div> --}}
      <button id="myBtn" class="ui is-dark submit button is-fullwidth mt-2">Contact Me</button>
    </div>



    <!-- The Modal -->
    <div id="myModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <div class="main-block">
          <div class="left-part">
            <i class="fas fa-envelope fas-modal"></i>
            <i class="fas fa-at fas-modal"></i>
            <i class="fas fa-mail-bulk fas-modal"></i>
          </div>
          <form action="/">

            <div class="info">
              <input class="fname" type="text" placeholder="name">

            </div>
            <p>Message</p>
            <div>
              <textarea rows="4"></textarea>
            </div>
            <a href="mailto:{{user.email}}">
              <h1 class="button-modal">Send</h1>
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>



<h2 class="ui horizontal divider header">
  <i class="fas fa-tasks"></i>
  &nbsp Project details
</h2>

<section class="section is-small detailsSection">
  <P>{{details}}</P>
  <P> technology used: {{tech}}</P>

</section>


<h2 class="ui horizontal divider header">
  <i class="fas fa-tasks"></i>
  &nbsp Collaborators
</h2>

<section class="section is-small">

  {{#each collabs as |collab|}}

  <div class="ui big horizontal divided list">
    <a href="/view-user/{{collab.user.id}}">
      <div class="item">

        {{#if collab.user.avatar}}
        <img class="ui avatar image" src="/assets/avatars/{{collab.user.avatar}}">
        {{else}}
        <img class="ui avatar image" id="avatar" src="/assets/profiles/joe/jpg">
        {{/if}}

        <div class="content">
          <div class="header">{{collab.user.user_name}}</div>
        </div>

      </div>
    </a>
  </div>

  {{/each}}

</section>

<script src="/js/collaborate.js"></script>